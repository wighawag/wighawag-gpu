<?xml version="1.0" encoding="utf-8" ?>
<project>
    <yoga-version>1</yoga-version>
    <compiler-version>2.10</compiler-version>

    <id>com.wighawag.gpu</id>
    <version>0.1.0-SNAPSHOT</version>

    <main>Main</main>

    <sources>
        <source path="src"/>
    </sources>

    <tests framework="munit" path="test"/>

    <targets hxml="compile">
        <target name="swf">
            <param line="-swf-version 11"/>
            <param line="-swf-lib agalminiassembler.swf"/>
        </target>
	<target name="cpp" >
        <param line="-D stage3d"/>
    </target>
	<target name="js" >
        <param line="-D stage3d"/>
    </target>
    </targets>
    
    <dependencies>
        <haxelib name="nme" />
        <haxelib name="msignal" version="1.0.0" />
        <repository id="com.wighawag.asset" version="0.1.2-SNAPSHOT" />
        <repository id="com.wighawag.utils" version="0.1.1" />
    </dependencies>
</project>
